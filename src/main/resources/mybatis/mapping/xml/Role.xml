<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.accp.dao.RoleDao">
    <resultMap id="mapRole" type="Role">
        <id column="id" property="id"/>
        <result column="no" property="no"/>
        <result column="name" property="roleName"/>
        <result column="stats" property="stats"/>
        <result column="modifyTime" property="modifyTime"/>
    </resultMap>

    <!--分页查询-->
    <select id="getList" resultMap="mapRole">
        SELECT  * FROM  role   LIMIT #{pagerNo},#{pagerSize}
    </select>
    <!--id查询-->
    <select id="getRoleId" resultMap="mapRole">
        SELECT * FROM role WHERE id=#{id}
    </select>

    <select id="queryrole" resultMap="mapRole">
        select * from role;
    </select>

    <!--修改-->
    <update id="modify">
      UPDATE  role
        <trim prefix="set" prefixOverrides="," suffix="where id=#{id}">
            <if test="name!=null and name!=''">name=#{name},</if>
            <if test="stats!=null and stats!='stats'">stats=#{stats},</if>
            <if test="modifyTime!=null and modifyTime!='stats'">modifyTime=#{modifyTime},</if>
        </trim>
    </update>
    <!--删除-->
    <delete id="remove">
        DELETE  FROM role where id=#{id}
    </delete>
    <!--新增-->
    <insert id="add">
     INSERT INTO role (id,no,roleName,stats,modifyTime) VALUES (DEFAULT,#{no},#{roleName},#{stats},#{modifyTime})
    </insert>
    <!--查询分页总行数-->
    <select id="count" resultType="_int">
        SELECT  count(1) FROM role
    </select>

</mapper>